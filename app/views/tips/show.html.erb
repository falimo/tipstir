<div class="booyah-box col-10 offset-1">
  <h1><%= @tip.title %></h1>
  <br/><br/>
  <p><%= @tip.description %></p>
   <br />

  <div class="float-right">
  <% if current_user && current_user == @tip.user %>
   <%= link_to 'Destroy', tip_path(@tip), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger' %>
   <% end %>
   <br />
  </div>
</div>




<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Add a comment</h4>
      </div>

      <%= simple_form_for @comment, url: tip_comments_path(@tip) do |f| %>
      <div class="modal-body">
        <%= f.input :message %>      
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Add a Comment", class: 'btn btn-primary' %>
      </div>
      <% end %>
    
    </div>
  </div>
</div>


<div class="col-10 offset-1">
<h1 class="float-left">Comments </h1>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Add a Comment
</button>

<div class="row">
<% @tip.comments.each do |comment| %>
  <div class="col-12 col-sm-6">
    <blockquote>
        <%= comment.message %>
      <small><%= comment.user.email %></small>
    </blockquote>
  </div>
<% end %>
</div>
</div>

<div class="clear"></div>
